<h1>Posts</h1>

<table>
  <thead>
    <th>Title</th>
    <th>Author</th>
    <th>Date Posted</th>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to "#{post.title}", post_path(post) %></td>
        <td><%= post.user.email %></td>
        <td><%= post.updated_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2><%= link_to "Create a new post", new_post_path %></h2>
