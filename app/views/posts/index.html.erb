<h1>Posts</h1>

<div class="btn btn-primary pull-right"><%= link_to "Create a new post", new_post_path %></div>

<table class="table table-hover">
  <thead>
    <th>Title</th>
    <th>Author</th>
    <th>Date Posted</th>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to "#{post.title}", post_path(post) %></td>
        <td><%= post.user.email %></td>
        <td><%= post.updated_at.strftime("%B %-d, %Y") %></td>
      </tr>
    <% end %>
  </tbody>
</table>
